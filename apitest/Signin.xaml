<Page x:Class="winapp.Signin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:apitest"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="400"
      Title="Signin">

    <DockPanel>
        <Grid HorizontalAlignment="Left" Height="653" Margin="-2,-3,0,0" VerticalAlignment="Bottom" Width="402" Background="White">
            <TextBox x:Name="tbID" Margin="69,240,69,363" FontSize="20"/>
            <PasswordBox x:Name="tbPassword" Margin="69,324,69,279" FontSize="20" PasswordChar="●" VerticalAlignment="Center" Height="50"/>
            <Button x:Name="btnLogin" Click="btnLogin_Click" Margin="69,480,69,123" Content="로그인" RenderTransformOrigin="0.5,0.5"/>
            <Button Content="회원가입" Click="btnRegister_Click" Margin="258,397,69,226" Width="75"/>
        </Grid>
    </DockPanel>
</Page>
